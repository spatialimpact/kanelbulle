<body>
<div id="map"></div>
<div id="hud">
  PoÃ¤ng: <span id="score">0</span><br>
  Tid kvar: <span id="timer">60</span>s
</div>
<div id="gameover">
  <h2>Spelet Ã¤r slut! ğŸ‰</h2>
  <p>Din poÃ¤ng: <span id="final-score"></span></p>
  <button onclick="location.reload()">Spela igen</button>
</div>

<script>
const map = new maplibregl.Map({
  container: 'map',
  style: 'https://tiles.openfreemap.org/styles/liberty', // OpenFreeMap gratis stil
  center: [18.0632, 59.3346], // Stockholm
  zoom: 13
});

let score = 0;
let timeLeft = 60;
let gameActive = true;

// TIMER
const timerInterval = setInterval(() => {
  if (timeLeft > 0) {
    timeLeft--;
    document.getElementById('timer').innerText = timeLeft;
  } else {
    endGame();
  }
}, 1000);

function endGame() {
  gameActive = false;
  clearInterval(timerInterval);
  document.getElementById('final-score').innerText = score;
  document.getElementById('gameover').style.display = 'block';
}

map.on('load', () => {
  // Ladda GeoJSON med bullar
  map.addSource('bullar.geojson', {
    type: 'geojson',
    data: 'bullar.geojson'
  });

  // Ladda din lokala bulle-ikon
  map.loadImage('./kanelbulle/kanelbulle.png', (error, image) => {
  if (error) {
    console.error("Kunde inte ladda kanelbulle.png", error);
    return;
  }
  map.addImage('bulle', image);
  map.addLayer({
    id: 'bullar-layer',
    type: 'symbol',
    source: 'bullar',
    layout: {
      'icon-image': 'bulle',
      'icon-size': 1.0,
      'icon-allow-overlap': true
    }
  });
});

  // Klick fÃ¶r att samla bullar
  map.on('click', 'bullar-layer', (e) => {
    if (!gameActive) return;

    const bullFeature = e.features[0];
    const points = bullFeature.properties.points;

    // uppdatera poÃ¤ng
    score += parseInt(points);
    document.getElementById('score').innerText = score;

    // ta bort bullen frÃ¥n GeoJSON
    const remaining = map.getSource('bullar')._data.features.filter(
      f => f.properties.name !== bullFeature.properties.name
    );

    map.getSource('bullar').setData({
      type: "FeatureCollection",
      features: remaining
    });
  });

  // Ã„ndra muspekaren
  map.on('mouseenter', 'bullar-layer', () => {
    if (gameActive) map.getCanvas().style.cursor = 'pointer';
  });
  map.on('mouseleave', 'bullar-layer', () => {
    map.getCanvas().style.cursor = '';
  });
});
</script>
</body>
</html>
